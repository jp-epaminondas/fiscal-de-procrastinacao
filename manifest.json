{
  "manifest_version": 3,
  "name": "Fiscal de Procrastinação",
  "version": "1.0",
  "description": "Bloqueie sites que tiram seu foco e aumente sua produtividade.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ]
}
